<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/lyt_out_sid"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:clickable="true"
            android:layout_centerInParent="true"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/selected">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/selected">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="@dimen/ten_dp"
                    android:textSize="@dimen/text_size_medium"
                    android:background="@color/blackTransparent50"
                    android:text="Harish Jose"/>
                <com.harishjose.myappointments.components.ProfileIconTextView
                    android:id="@+id/tv_profile_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:transitionName="profile_transition"
                    android:layout_centerInParent="true"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:text="JB"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:weightSum="3"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white">
                    <ImageButton
                        android:id="@+id/btn_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="@dimen/ten_dp"
                        android:background="@color/white"
                        android:src="@drawable/ic_call"/>
                    <ImageButton
                        android:id="@+id/btn_sms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="@dimen/ten_dp"
                        android:background="@color/white"
                        android:src="@drawable/ic_sms"/>
                    <ImageButton
                        android:id="@+id/btn_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="@dimen/ten_dp"
                        android:background="@color/white"
                        android:src="@drawable/ic_email"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</layout>