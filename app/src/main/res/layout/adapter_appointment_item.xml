<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/five_dp"
    android:layout_marginTop="@dimen/five_dp">

    <LinearLayout
        android:id="@+id/lyt_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/dark_grey"
            android:includeFontPadding="false"
            android:textSize="@dimen/text_size_medium"
            android:paddingTop="@dimen/two_dp"
            android:paddingBottom="@dimen/two_dp"
            android:paddingStart="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_small"
            android:layout_marginEnd="@dimen/ten_dp"
            android:textColor="@color/whiteTransparent50"
            android:text="Today"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="@dimen/text_size_medium"
            android:paddingTop="@dimen/two_dp"
            android:paddingBottom="@dimen/two_dp"
            android:textColor="@color/secondaryText"
            android:text="Oct 24, 2015"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        android:layout_below="@+id/lyt_header"
        app:cardCornerRadius="@dimen/two_dp">
        <RelativeLayout
            android:id="@+id/lyt_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:padding="2dp"
            android:background="@color/dividerColor">

            <LinearLayout
                android:id="@+id/lyt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/selected"
                android:layout_alignTop="@+id/lyt_details"
                android:layout_alignBottom="@+id/lyt_details"
                android:padding="@dimen/padding_small"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteTransparent50"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold"
                    android:text="12:30"/>
                <TextView
                    android:id="@+id/tv_am_pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/whiteTransparent50"
                    android:textStyle="bold"
                    android:text="PM"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lyt_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:background="@color/white"
                android:layout_toEndOf="@+id/lyt_time"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightGrey"
                    android:paddingTop="@dimen/padding_small"
                    android:paddingStart="@dimen/padding_small"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_assignment"
                        android:drawablePadding="@dimen/five_dp"
                        android:layout_marginEnd="@dimen/five_dp"
                        android:includeFontPadding="false"
                        android:textColor="@color/selected"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:text="Green Server Upgrade"/>
                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/five_dp"
                        android:textStyle="bold"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/text_size_small"
                        android:text="32 1st Rd, Brisbane"/>
                    <TextView
                        android:id="@+id/tv_time_slot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/ten_dp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_x_small"
                        android:text="12:30 - 1:30 PM"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/lyt_owner_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small">
                    <com.harishjose.myappointments.components.ProfileIconTextView
                        android:id="@+id/profile_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:transitionName="profile_transition"
                        android:textColor="@color/dark_grey"
                        android:textAllCaps="true"
                        android:text="HJ"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/profile_icon"
                        android:layout_alignBottom="@+id/profile_icon"
                        android:layout_marginStart="@dimen/padding_small"
                        android:layout_toEndOf="@+id/profile_icon"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_owner_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/dark_grey"
                            android:textStyle="bold"
                            android:text="Harish Jose"/>
                        <TextView
                            android:id="@+id/tv_account_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/secondaryText"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold"
                            android:text="JK Steel"/>
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>

